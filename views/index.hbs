<div class="row">

  {{#each data}}
  {{#each this}}

  <div class="col">
    <div class="card" style="width: 18rem;">
      <img src={{this.img}}>
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.info.stornge}}<br>{{this.info.ram}}<br>{{this.info.prosser}} <br></p>
        <div>
          <div>
            <h3>{{this.prize}}$</h3>
            {{#if ../../ifLotedOut}}
            <a href="/addToCart/{{this._id}}/{{this.prize}}/{{this.title}}" class="btn btn-primary">BUY</a>

            {{else}}
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              buy
            </button>
            {{/if}}
          </div>
        </div>

      </div>
    </div>
  </div>
  {{/each}}
  {{/each}}
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">sign in please</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        u can't buy a product wihtout singing in
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="users/sign_up" class="btn btn-primary">sign_up</a>
        
      </div>
    </div>
  </div>
</div>